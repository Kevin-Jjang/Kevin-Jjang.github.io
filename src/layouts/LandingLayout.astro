---
import "../styles/global.css";
import HeaderDesktop from "../components/HeaderDesktop.astro";
import HeaderMobile from "../components/HeaderMobile.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - Kevin Jang</title>
	</head>
	<body>
		<HeaderDesktop />
		<HeaderMobile />
		<slot />
	</body>
</html>

<script>
	window.addEventListener("mousemove", (event) => {
		let thisX = event.clientX;
		let thisY = event.clientY;
		const body = document.querySelector("body");
		body?.style.setProperty("--mouse-x", thisX + "px");
		body?.style.setProperty("--mouse-y", thisY + "px");
	});
</script>

<style>
	main {
		margin-right: auto;
		width: auto;
		overflow-y: scroll;
	}

	html {
		scroll-behavior: smooth;
	}

	body {
		display: flex;
		flex-direction: column;
		align-items: center;
		margin: 0;
		background: #36087b;
		color: #fff;
	}

	body::before {
		content: "";
		position: fixed;
		top: var(--mouse-y);
		left: var(--mouse-x);
		--diameter: 0;
		height: var(--diameter);
		width: var(--diameter);
		background: transparent;
		background: radial-gradient(circle closest-side, #7d27ff40, transparent);
		transform: translate(-50%, -50%);
		z-index: -1;
	}

	body:hover::before {
		--diameter: 400px;
	}
</style>
