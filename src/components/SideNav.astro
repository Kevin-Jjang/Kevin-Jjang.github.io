    }

    .navlinks > li {
        margin-top: 16px;
        margin-bottom: 16px;
        font-size: 1.5rem;
    }

    .navlinks > li:after {
        content: " <";
    }

    .navlinks > li > a {
        text-decoration: none;
        color: black;
    }

    .socials {
        display: flex;
        align-items: center;
        justify-content: space-evenly;
        /* margin-bottom: 64px; */
        width: 70%;
        flex-grow: 1;
    }
    .socials a {
        text-decoration: none;
    }

